{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "ethers": ["node_modules/ethers"],
      "abitype": ["node_modules/abitype"],
      "wagmi": ["node_modules/wagmi"],
      "@wagmi/core": ["node_modules/@wagmi/core"]
    }
  },
  "include": ["src"]
}
